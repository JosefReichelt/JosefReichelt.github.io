{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "jsx": "react",
    "sourceMap": true,
    "outDir": "./build",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "_Storybook/*": [".storybook/*"],
      "_Assets/*": ["src/assets/*"],
      "_styles/*": ["src/styles/*"]
    },
    "rootDirs": ["src", ".storybook", "config"],
    "typeRoots": ["./src/*", "./node_modules/@types"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx"],
  "exclude": ["**/*.test.ts"]
}
